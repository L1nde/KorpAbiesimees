<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLinear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/itemLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_border"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/typeField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/row_padding"
            android:text="TextView"
            android:textSize="@dimen/row_item" />

        <TextView
            android:id="@+id/lastnameField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/row_padding"
            android:text="TextView"
            android:textSize="@dimen/row_item" />

        <TextView
            android:id="@+id/firstnameField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/row_padding"
            android:text="TextView"
            android:textSize="@dimen/row_item" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/expandedLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/attendanceLinear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/extended_border"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/privateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Erakoosolek: " />

            <TextView
                android:id="@+id/privateNr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView" />

            <TextView
                android:id="@+id/generalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Üldkoosolek: " />

            <TextView
                android:id="@+id/generalNr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/laitusLinear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/extended_border"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/laitusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Laituseid: " />

            <TextView
                android:id="@+id/laitusNr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/markusLinear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/extended_border"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/markusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Märkuseid: " />

            <TextView
                android:id="@+id/markusNr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lateLinear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/extended_border"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hilinemisi: " />

            <TextView
                android:id="@+id/lateNr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView" />
        </LinearLayout>

        <Button
            android:id="@+id/editButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Muuda andmeid" />
    </LinearLayout>

</LinearLayout>
